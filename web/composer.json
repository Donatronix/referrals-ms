{
    "name": "kup/referrals-ms",
    "description": "Referral Program API Microservice",
    "type": "project",
    "license": "MIT",
    "private": true,
    "require": {
        "php": "^8.0",
        "doctrine/dbal": "~3",
        "ext-json": "*",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "~7",
        "kreait/laravel-firebase": "~2",
        "laravel/lumen-framework": "~8",
        "sumra/sdk": "*"
    },
    "require-dev": {
        "fakerphp/faker": "~1",
        "mockery/mockery": "~1",
        "phpunit/phpunit": "~9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../sumra-sdk",
            "options": {
                "symlink": false
            }
        }
    ]
}
